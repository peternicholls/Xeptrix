{
  "name": "xeptrix",
  "displayName": "Xeptrix - Document Format Converter",
  "description": "Document Format Converter for Javascript written in TypeScript",
  "version": "0.1.1",
  "keywords": [
    "format",
    "html",
    "rtf",
    "convert",
    "node",
    "javascript",
    "typescript"
  ],
  "author": "Peter Nicholls <EMAIL@ADDRESS>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peternicholls/xeptrix.git"
  },
  "homepage": "https://github.com/peternicholls/xeptrix#readme",
  "bugs": {
    "url": "https://github.com/peternicholls/xeptrix/issues"
  },
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jest.config.json"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.12",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@types/jsdom": "^21.1.1",
    "jsdom": "^21.1.1",
    "node-fetch": "^3.3.1",
    "sharp": "^0.32.0"
  }
}
