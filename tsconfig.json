{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include":  ["src", "Xeptrix.class.ts"],
    "exclude": 
    [
        "node_modules", 
        "**/__tests__/*", 
        "**/components/*", // excluded as not in release build
        "**/elements/*", // excluded as not in release build
        "**/enums/*", // excluded as not in release build
    ]
}